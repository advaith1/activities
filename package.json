    "discord-api-types": "^0.20.2",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "service-worker-mock": "^2.0.5",
    "ts-loader": "^7.0.5",
    "typescript": "^4.4.0-beta",
    "webpack": "^5.33.2",
    "webpack-cli": "^3.3.12"
  }
}
