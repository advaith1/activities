{
  "name": "activities-bot",
  "description": "Discord Activities bot",
  "author": "Advaith Jagathesan (https://advaith.io)",
  "main": "dist/worker.production.js",
  "scripts": {
    "build": "webpack",
    "dev": "NODE_ENV=development npm run build",
